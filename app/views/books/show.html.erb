<div class="mx-auto w-full md:max-w-2xl">
  <%= render @book %>

  <% if policy(@book).edit? || policy(@book).destroy? %>
    <div class="mt-5 flex space-x-5">
      <%= link_to 'Edit book', edit_book_path(@book), class: "text-blue-600 hover:text-black transition" if policy(@book).edit? %>
      <%= button_to 'Destroy book', book_path(@book), method: :delete, class: "text-blue-600 hover:text-black transition" if policy(@book).destroy?%>
    </div>
  <% end %>
</div>
