<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="books" class="mx-auto w-full md:max-w-2xl">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl md:text-4xl mb-5">Libros</h1>
      <%= link_to 'New book', new_book_path, class: "text-blue-600 hover:text-black transition" if policy(Book).new? %>
    </div>

    <div class="space-y-3">
      <%= render @books %>
    </div>
  </div>
</div>
