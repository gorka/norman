<div class="mx-auto w-full md:max-w-2xl">
  <h1 class="text-4xl mb-5"><%= @view.viewable.title %></h1>

  <% if @view.errors.any? %>
    <div class="p-2 bg-red-300">
      <% @view.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </div>
  <% end %>

  <%= render partial: "form" %>
</div>
