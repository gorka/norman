<div class="mx-auto w-full md:max-w-2xl"> 
  <h1 class="text-2xl md:text-4xl mb-5">Últimas películas vistas</h1>
  <div class="space-y-3">
    <% @views.each do |view| %>
      <div class="flex flex-wrap md:flex-nowrap justify-between md:justify-start md:space-x-5 p-2 bg-white rounded-md">
        <div class="order-2 md:order-1">
          <%= view.date.to_fs(:short)  %>
        </div>
        <div class="order-1 md:order-2 w-full md:w-auto md:grow">
          <%= link_to view.viewable.title, view_path(view) %>
        </div>
        <div class="order-3 flex space-x-5 justify-end items-center">
          <%= stars(view.rating) %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="<%= class_names("w-6", "h-6", { "text-slate-200": !view.comment.present? }) %>">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
          </svg>
        </div>
      </div>
    <% end %>
  </div>
</div>
