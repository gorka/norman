<div class="mx-auto w-full md:max-w-2xl"> 
  <h1 class="text-2xl md:text-4xl mb-5">Últimas películas vistas</h1>
  <div class="space-y-3">
    <% @views.each do |view| %>
      <div class="flex flex-wrap md:flex-nowrap justify-between md:justify-start md:space-x-5 p-2 bg-white rounded-md">
        <div class="order-2 md:order-1">
          <%= view.date.to_fs(:short)  %>
        </div>
        <div class="order-1 md:order-2 w-full md:w-auto md:grow">
          <%= link_to view.viewable.title, view_path(view) %>
        </div>
        <div class="order-3 flex justify-end">
          <%= stars(view.rating) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
